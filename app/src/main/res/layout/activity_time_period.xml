<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_switch"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_setting_item_height"
        android:background="@drawable/bg_ripper_effect">

        <TextView
            android:id="@+id/item_switch_time_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/device_setting_margin_first"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="@string/device_setting_period_1"
            android:textColor="@color/gray_first"
            android:textSize="@dimen/device_setting_text_size_14" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/item_switch_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/device_setting_margin_first"
            android:checked="false"
            android:theme="@style/CustomSwitch"
            app:switchMinWidth="37dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginEnd="@dimen/device_setting_margin_first"
        android:layout_marginStart="@dimen/device_setting_margin_first"
        android:background="@color/gray_line" />

    <RelativeLayout
        android:id="@+id/item_start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_setting_item_height"
        android:layout_marginTop="@dimen/device_setting_margin_first"
        android:background="@drawable/bg_ripper_effect"
        android:visibility="gone"
        tools:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginEnd="@dimen/device_setting_margin_first"
            android:layout_marginStart="@dimen/device_setting_margin_first"
            android:background="@color/gray_line" />

        <TextView
            android:id="@+id/item_start_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/device_setting_margin_first"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="@string/device_setting_start_time"
            android:textColor="@color/gray_first"
            android:textSize="@dimen/device_setting_text_size_14" />

        <ImageView
            android:id="@+id/item_start_arrow"
            android:layout_width="@dimen/device_setting_image_size"
            android:layout_height="@dimen/device_setting_image_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/device_setting_margin_first"
            android:src="@mipmap/ic_direction_right_mid" />

        <TextView
            android:id="@+id/item_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/device_setting_margin_second"
            android:layout_toEndOf="@id/item_start_tips"
            android:layout_toStartOf="@id/item_start_arrow"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:singleLine="true"
            android:textColor="@color/gray_second"
            android:textSize="@dimen/device_setting_text_size_14" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_setting_item_height"
        android:background="@drawable/bg_ripper_effect"
        android:visibility="gone"
        tools:visibility="visible">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginEnd="@dimen/device_setting_margin_first"
            android:layout_marginStart="@dimen/device_setting_margin_first"
            android:background="@color/gray_line" />

        <TextView
            android:id="@+id/item_end_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/device_setting_margin_first"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="@string/device_setting_end_time"
            android:textColor="@color/gray_first"
            android:textSize="@dimen/device_setting_text_size_14" />

        <ImageView
            android:id="@+id/item_end_arrow"
            android:layout_width="@dimen/device_setting_image_size"
            android:layout_height="@dimen/device_setting_image_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/device_setting_margin_first"
            android:src="@mipmap/ic_direction_right_mid" />

        <TextView
            android:id="@+id/item_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/device_setting_margin_second"
            android:layout_toEndOf="@id/item_end_tips"
            android:layout_toStartOf="@id/item_end_arrow"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:singleLine="true"
            android:textColor="@color/gray_second"
            android:textSize="@dimen/device_setting_text_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/device_setting_margin_first"
            android:layout_marginStart="@dimen/device_setting_margin_first"
            android:background="@color/gray_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/item_repeat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_setting_item_height"
        android:background="@drawable/bg_ripper_effect"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/item_repeat_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/device_setting_margin_first"
            android:ellipsize="end"
            android:gravity="start|center_vertical"
            android:maxWidth="200dp"
            android:singleLine="true"
            android:text="@string/device_setting_repeat_time"
            android:textColor="@color/gray_first"
            android:textSize="@dimen/device_setting_text_size_14" />

        <ImageView
            android:id="@+id/item_repeat_arrow"
            android:layout_width="@dimen/device_setting_image_size"
            android:layout_height="@dimen/device_setting_image_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/device_setting_margin_first"
            android:src="@mipmap/ic_direction_right_mid" />

        <TextView
            android:id="@+id/item_repeat_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/device_setting_margin_second"
            android:layout_toEndOf="@id/item_repeat_tips"
            android:layout_toStartOf="@id/item_repeat_arrow"
            android:ellipsize="end"
            android:gravity="end|center_vertical"
            android:singleLine="true"
            android:textColor="@color/gray_second"
            android:textSize="@dimen/device_setting_text_size_14" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="@dimen/device_setting_margin_first"
            android:layout_marginStart="@dimen/device_setting_margin_first"
            android:background="@color/gray_line" />
    </RelativeLayout>

</LinearLayout>