<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_video_act"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/iv_thumb"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/item_payment_curamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:singleLine="true"
        android:textColor="@color/wv_second_bg"
        tools:text="333333333"
        android:textSize="@dimen/wv_base_sizeText_3" />

    <ImageView
        android:id="@+id/item_checked"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@+id/iv_thumb"
        android:layout_alignRight="@+id/iv_thumb"
        android:src="@mipmap/video_selected" />

</RelativeLayout>