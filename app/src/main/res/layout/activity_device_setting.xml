                android:layout_marginStart="@dimen/device_setting_margin_first"
                android:src="@mipmap/ic_image" />

            <TextView
                android:id="@+id/item_image_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/device_setting_margin_third"
                android:layout_toEndOf="@id/iv_image"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:text="@string/device_setting_image_audio"
                android:textColor="@color/gray_first"
                android:textSize="@dimen/device_setting_text_size_14" />

            <ImageView
                android:id="@+id/item_image_arrow"
                android:layout_width="@dimen/device_setting_image_size"
