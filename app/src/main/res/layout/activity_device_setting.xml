<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.device.setting.DeviceSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="@dimen/device_setting_item_height"
            android:background="@drawable/bg_ripper_effect">

            <ImageView
                android:id="@+id/iv_name"
                android:layout_width="@dimen/device_setting_image_size"
                android:layout_height="@dimen/device_setting_image_size"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/device_setting_margin_first"
                android:src="@mipmap/ic_name" />

            <TextView
                android:id="@+id/item_name_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/device_setting_margin_third"
                android:layout_toEndOf="@id/iv_name"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:text="@string/device_setting_name"
                android:textColor="@color/gray_first"
                android:textSize="@dimen/device_setting_text_size_14" />

            <ImageView
                android:id="@+id/item_name_arrow"
                android:layout_width="@dimen/device_setting_image_size"
                android:layout_height="@dimen/device_setting_image_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:src="@mipmap/ic_direction_right_mid" />

            <TextView
                android:id="@+id/item_name_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/device_setting_margin_second"
                android:layout_toEndOf="@id/item_name_tips"
                android:layout_toStartOf="@id/item_name_arrow"
                android:ellipsize="end"
                android:gravity="end|center_vertical"
                android:singleLine="true"
                android:textColor="@color/gray_second"
                android:textSize="@dimen/device_setting_text_size_14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginEnd="@dimen/device_setting_margin_first"
            android:layout_marginStart="@dimen/device_setting_margin_first"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/item_info"
            android:layout_width="match_parent"
            android:layout_height="@dimen/device_setting_item_height"
            android:background="@drawable/bg_ripper_effect">

            <ImageView
                android:id="@+id/iv_info"
                android:layout_width="@dimen/device_setting_image_size"
                android:layout_height="@dimen/device_setting_image_size"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/device_setting_margin_first"
                android:src="@mipmap/ic_information" />

            <TextView
                android:id="@+id/item_info_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/device_setting_margin_third"
                android:layout_toEndOf="@id/iv_info"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:text="@string/device_setting_information"
                android:textColor="@color/gray_first"
                android:textSize="@dimen/device_setting_text_size_14" />

            <ImageView
                android:id="@+id/item_info_arrow"
                android:layout_width="@dimen/device_setting_image_size"
                android:layout_height="@dimen/device_setting_image_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:src="@mipmap/ic_direction_right_mid" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_marginEnd="@dimen/device_setting_margin_first"
            android:layout_marginStart="@dimen/device_setting_margin_first"
            android:background="@color/gray_line" />

        <RelativeLayout
            android:id="@+id/item_network"
            android:layout_width="match_parent"
            android:layout_height="@dimen/device_setting_item_height"
