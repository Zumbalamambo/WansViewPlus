                android:layout_marginStart="@dimen/device_setting_margin_third"
                android:layout_toEndOf="@id/iv_tf_storage"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:maxWidth="200dp"
                android:singleLine="true"
                android:text="@string/device_setting_card_storage"
                android:textColor="@color/gray_first"
                android:textSize="@dimen/device_setting_text_size_14" />

            <ImageView
                android:id="@+id/item_tf_storage_arrow"
                android:layout_width="@dimen/device_setting_image_size"
