<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/picker_toolbar_height"
    android:background="@color/white"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/timepicker_sel_text_item"
        android:gravity="center"
        android:layout_marginStart="@dimen/device_setting_margin_first"
        android:text="@string/picker_cancel"
        android:textColor="@color/gray_second"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:gravity="center"
        android:visibility="invisible"
        android:text="@string/picker_title"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/timepicker_sel_text_item"
        android:gravity="center"
        android:layout_marginEnd="@dimen/device_setting_margin_first"
        android:text="@string/picker_sure"
        android:textColor="@color/gray_first"
        android:textSize="14sp" />

</LinearLayout>