<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    app:elevation="0dp">

    <net.ajcloud.wansviewplus.support.customview.MyToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height"
        android:background="@color/colorPrimaryDark"
        android:minHeight="@dimen/toolbar_height"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        app:elevation="0dp">

        <RelativeLayout
            android:id="@+id/toolbar_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/img_left"
                android:layout_width="@dimen/toolbar_img_size"
                android:layout_height="@dimen/toolbar_img_size"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/default_margin_left"
                android:clickable="true"
                android:src="@mipmap/ic_back"
                android:visibility="gone"
                tools:visibility="visible" />

            <Button
                android:id="@+id/btn_left"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbar_height"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/default_margin_left"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="start|center_vertical"
                android:lines="1"
                android:text="test"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/signIn_textSize_18"
                android:visibility="gone"
                tools:visibility="visible" />

            <TextView
                android:id="@+id/tv_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:lines="1"
                android:maxWidth="165dp"
                android:minWidth="100dp"
                android:textColor="@color/black"
                android:textSize="@dimen/signIn_textSize_18"
                android:visibility="gone"
                tools:text="标题"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/img_tittle"
                android:layout_width="@dimen/toolbar_height"
                android:layout_height="@dimen/toolbar_height"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:visibility="gone" />

            <Button
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/toolbar_height"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/default_margin_left"
                android:background="@null"
                android:ellipsize="end"
                android:gravity="center|end"
                android:lines="1"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/signIn_textSize_18"
                android:visibility="gone"
                tools:text="text"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/img_right"
                android:layout_width="@dimen/toolbar_img_size"
                android:layout_height="@dimen/toolbar_img_size"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:layout_marginEnd="@dimen/default_margin_left"
                android:src="@mipmap/ic_back"
                android:visibility="gone"
                tools:visibility="visible" />

        </RelativeLayout>
    </net.ajcloud.wansviewplus.support.customview.MyToolbar>
</android.support.design.widget.AppBarLayout>