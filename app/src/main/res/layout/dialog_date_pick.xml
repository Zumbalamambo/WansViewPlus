                    tools:text="28" />

                <ImageView
                    android:id="@+id/iv_light_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/shape_circle_blue"
                    android:tag="light"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_day_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:tag="day"
                    android:text="@string/common_today"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/alert_text_size_12" />

                <TextView
                    android:id="@+id/tv_date_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:tag="date"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/alert_text_size_20"
                    tools:text="28" />

                <ImageView
                    android:id="@+id/iv_light_7"
                    android:layout_width="6dp"
                    android:layout_height="6dp"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="fitXY"
                    android:src="@drawable/shape_circle_blue"
                    android:tag="light"
                    android:visibility="gone" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>