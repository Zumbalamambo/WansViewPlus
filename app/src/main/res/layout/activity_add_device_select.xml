<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.device.addDevice.AddDeviceSelectActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_k3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_device_margin">

                <ImageView
                    android:id="@+id/iv_k3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_k3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="Wansview K3"
                    android:textColor="@color/gray_first"
                    android:textSize="@dimen/signIn_textSize_20" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_device_margin">

                <ImageView
                    android:id="@+id/iv_q3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_q3"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="Wansview Q3"
                    android:textColor="@color/gray_first"
                    android:textSize="@dimen/signIn_textSize_20" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_w2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/add_device_margin">

                <ImageView
                    android:id="@+id/iv_w2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_w2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:text="Wansview W2"
                    android:textColor="@color/gray_first"
                    android:textSize="@dimen/signIn_textSize_20" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>