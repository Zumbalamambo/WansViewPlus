<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_thumbnail"
        android:layout_width="144dp"
        android:layout_height="108dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_device_default" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_thumbnail"
        android:layout_alignEnd="@id/iv_thumbnail"
        android:layout_alignStart="@id/iv_thumbnail"
        android:layout_alignTop="@id/iv_thumbnail"
        android:background="@color/gray_first_translate_dark">

        <ImageView
            android:id="@+id/iv_state"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_play_white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_state"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/alert_text_size_12"
                tools:text="May.07" />

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                android:textSize="@dimen/alert_text_size_12"
                tools:text="12:34" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>