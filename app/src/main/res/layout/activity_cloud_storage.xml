<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.device.setting.TFCardActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/ll_bottom"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/item_storage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/device_setting_item_height"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first">

                <TextView
                    android:id="@+id/item_storage_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="Cloud storage"
                    android:textColor="@color/gray_first"
                    android:textSize="@dimen/signIn_textSize_14" />

                <android.support.v7.widget.SwitchCompat
                    android:id="@+id/item_storage_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:checked="true"
                    android:theme="@style/CustomSwitch"
                    app:switchMinWidth="37dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:id="@+id/item_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/device_setting_item_height"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first">

                <TextView
                    android:id="@+id/item_time_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="Detection time"
                    android:textColor="@color/gray_first"
                    android:textSize="@dimen/signIn_textSize_14" />

                <ImageView
                    android:id="@+id/item_time_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow" />

                <TextView
                    android:id="@+id/item_time_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/device_setting_margin_second"
                    android:layout_toEndOf="@id/item_time_tips"
                    android:layout_toStartOf="@id/item_time_arrow"
                    android:ellipsize="end"
                    android:gravity="end|center_vertical"
                    android:singleLine="true"
                    android:text="24-hour"
                    android:textColor="@color/gray_second"
                    android:textSize="@dimen/signIn_textSize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:id="@+id/item_quality"
                android:layout_width="match_parent"
                android:layout_height="@dimen/device_setting_item_height"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first">

                <TextView
                    android:id="@+id/item_quality_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="Video quality"
                    android:textColor="@color/gray_first"
                    android:textSize="@dimen/signIn_textSize_14" />

                <ImageView
                    android:id="@+id/item_quality_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow" />

                <TextView
                    android:id="@+id/item_quality_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/device_setting_margin_second"
                    android:layout_toEndOf="@id/item_quality_tips"
                    android:layout_toStartOf="@id/item_quality_arrow"
                    android:ellipsize="end"
                    android:gravity="end|center_vertical"
                    android:singleLine="true"
                    android:text="FHD"
                    android:textColor="@color/gray_second"
                    android:textSize="@dimen/signIn_textSize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:id="@+id/item_plan_one"
                android:layout_width="match_parent"
                android:layout_height="@dimen/device_setting_item_height"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first"
                android:layout_marginTop="@dimen/device_setting_margin_first">

                <TextView
                    android:id="@+id/item_plan_one_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="Record plan"
                    android:textColor="@color/gray_first"
                    android:textSize="@dimen/signIn_textSize_14" />

                <ImageView
                    android:id="@+id/item_plan_one_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow" />

                <TextView
                    android:id="@+id/item_plan_one_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/device_setting_margin_second"
                    android:layout_toEndOf="@id/item_plan_one_tips"
                    android:layout_toStartOf="@id/item_plan_one_arrow"
                    android:ellipsize="end"
                    android:gravity="end|center_vertical"
                    android:singleLine="true"
                    android:text="7-day cloud sorage"
                    android:textColor="@color/gray_second"
                    android:textSize="@dimen/signIn_textSize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:id="@+id/item_one_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/device_setting_item_height"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first">

                <TextView
                    android:id="@+id/item_one_time_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="Validity period"
                    android:textColor="@color/gray_first"
                    android:textSize="@dimen/signIn_textSize_14" />

                <TextView
                    android:id="@+id/item_one_time_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/item_one_time_tips"
                    android:ellipsize="end"
                    android:gravity="end|center_vertical"
                    android:singleLine="true"
                    android:text="2018.05.11-2019.05.12"
                    android:textColor="@color/gray_second"
                    android:textSize="@dimen/signIn_textSize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:id="@+id/item_plan_two"
                android:layout_width="match_parent"
                android:layout_height="@dimen/device_setting_item_height"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first"
                android:layout_marginTop="@dimen/device_setting_margin_first">

                <TextView
                    android:id="@+id/item_plan_two_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="Record plan 2"
                    android:textColor="@color/gray_first"
                    android:textSize="@dimen/signIn_textSize_14" />

                <ImageView
                    android:id="@+id/item_plan_two_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_arrow" />

                <TextView
                    android:id="@+id/item_plan_two_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/device_setting_margin_second"
                    android:layout_toEndOf="@id/item_plan_two_tips"
                    android:layout_toStartOf="@id/item_plan_two_arrow"
                    android:ellipsize="end"
                    android:gravity="end|center_vertical"
                    android:singleLine="true"
                    android:text="如果有第二个未生效订单"
                    android:textColor="@color/gray_second"
                    android:textSize="@dimen/signIn_textSize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first"
                android:background="@color/gray_line" />

            <RelativeLayout
                android:id="@+id/item_two_time"
                android:layout_width="match_parent"
                android:layout_height="@dimen/device_setting_item_height"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first">

                <TextView
                    android:id="@+id/item_two_time_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:maxWidth="200dp"
                    android:singleLine="true"
                    android:text="Validity period"
                    android:textColor="@color/gray_first"
                    android:textSize="@dimen/signIn_textSize_14" />

                <TextView
                    android:id="@+id/item_two_time_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/item_two_time_tips"
                    android:ellipsize="end"
                    android:gravity="end|center_vertical"
                    android:singleLine="true"
                    android:text="2018.05.11-2019.05.12"
                    android:textColor="@color/gray_second"
                    android:textSize="@dimen/signIn_textSize_14" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginEnd="@dimen/device_setting_margin_first"
                android:layout_marginStart="@dimen/device_setting_margin_first"
                android:background="@color/gray_line" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/device_setting_item_height"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_expire"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:ellipsize="end"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:text="Will expire in 366 days"
            android:textAllCaps="false"
            android:textColor="@color/gray_first"
            android:textSize="@dimen/signIn_textSize_12" />

        <Button
            android:id="@+id/btn_replenish"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:text="Replenish"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/signIn_textSize_16" />
    </LinearLayout>
</RelativeLayout>